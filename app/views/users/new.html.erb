<div class="sign-up-page">
  <div class="logo">
    <%= image_tag 'logo_white.png' %>
  </div>
  <main class="content">
    <%= simple_form_for @user do |f| %>
      <%= f.input :name %>
      <%= f.input :email %>
      <%= f.input :password %>
      <%= f.input :password_confirmation, required: true %>
      <div class="submit">
        <%= f.button :submit %>
      </div>
    <% end %>
  </main>
  <div class="log_in">
    <%= t('.already_have_acc') %> <%= link_to t('.log_in'), log_in_path %>.
  </div>
</div>
